<div class="login">
  <div class="login__panel">
    <span class="login__logo"></span>
    <h2 class="login__title">Kodep Development</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field login__entry">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
      </div>

      <div class="field login__entry">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label 'Запомнить меня' %>
        </div>
      <% end %>

      <div class="login__buttons">
        <%= f.submit "Вход" %>
        <%= link_to "Регистрация", new_registration_path(resource_name), class: 'btn' %>
      </div>
    <% end %>

  </div>
</div>
